@model IEnumerable<CustomerOrder2.Models.Dto.OrderInfoDto>

@{
    ViewData["Title"] = "全部訂單";
}

<h4>全部訂單</h4>
<table class="table">
    <!--欄位名稱-->>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>          
        </tr>
    </thead>
    <!--所有明細-->
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <!--
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
            -->
        </tr>
        }
    </tbody>
</table>

<!--匯出 Excel-->
@Html.ActionLink("Export To Excel", "OrderExport")
